<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Fortifications - Neolithic</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Hide palisade wall alternatives from the architect menu -->

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_Palisade_Corner"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_Palisade_Embrasures"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>

                <!-- Hide palisade gate from the architect menu -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_PalisadeGate"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>

                <!-- Hide ditch from the architect menu -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_Ditch"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>