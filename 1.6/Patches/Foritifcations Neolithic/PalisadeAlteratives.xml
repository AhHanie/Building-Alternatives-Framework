<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Fortifications - Neolithic</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Add alternatives to the basic Palisade Wall -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_Palisade"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <alternatives>
                                    <li>FT_Palisade_Corner</li>
                                    <li>FT_Palisade_Embrasures</li>
                                </alternatives>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <!-- Add alternatives to the basic Palisade Door -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_PalisadeDoor"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <alternatives>
                                    <li>FT_PalisadeGate</li>
                                </alternatives>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <!-- Add alternatives to Cavalry Spikes for field fortifications -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_CavalrySpike"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <alternatives>
                                    <li>FT_Ditch</li>
                                </alternatives>
                            </li>
                        </modExtensions>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>