<?xml version="1.0" encoding="utf-8"?>
<!-- ========================================================================================== -->
<!-- NUCLEAR ALTERNATIVES FOR Fortification Industrial - Nuclear Dawn -->
<!-- ========================================================================================== -->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Fortification Industrial -Nuclear Dawn</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <!-- ==================== NUCLEAR POWER ALTERNATIVES ==================== -->
                <!-- Add alternatives to the primary RTG (smaller, simpler power source) -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_RTG"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <alternatives>
                                    <li>FT_Reactor</li>
                                </alternatives>
                                <uiIconPath>UI/List</uiIconPath>
                                <hoverUiIconPath>UI/ListSelected</hoverUiIconPath>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <!-- Hide nuclear reactor from architect menu (show only as alternative) -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_Reactor"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>