<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Furniture Expanded - Production</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <!-- VFE PRODUCTION ALTERNATIVES GROUP -->
                <!-- Set VFE large machining table as master (visible in architect menu) -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VFE_TableMachiningLarge"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <tag>VFE_ProductionAlternatives</tag>
                                <isMaster>true</isMaster>
                                <uiIconPath>UI/List</uiIconPath>
                                <hoverUiIconPath>UI/ListSelected</hoverUiIconPath>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <!-- Set all other VFE production buildings as alternatives (hidden from GUI) -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VFE_TableSmithyLarge"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <tag>VFE_ProductionAlternatives</tag>
                                <isMaster>false</isMaster>
                                <hideFromGUI>true</hideFromGUI>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VFE_TableStoveLarge"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <tag>VFE_ProductionAlternatives</tag>
                                <isMaster>false</isMaster>
                                <hideFromGUI>true</hideFromGUI>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VFE_TableTailorLarge"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <tag>VFE_ProductionAlternatives</tag>
                                <isMaster>false</isMaster>
                                <hideFromGUI>true</hideFromGUI>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VFE_ComponentFabricationBench"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <tag>VFE_ProductionAlternatives</tag>
                                <isMaster>false</isMaster>
                                <hideFromGUI>true</hideFromGUI>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VFE_TableButcherElectric"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <tag>VFE_ProductionAlternatives</tag>
                                <isMaster>false</isMaster>
                                <hideFromGUI>true</hideFromGUI>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VFE_TableDrugLabElectric"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <tag>VFE_ProductionAlternatives</tag>
                                <isMaster>false</isMaster>
                                <hideFromGUI>true</hideFromGUI>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VFE_FueledSmelter"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <tag>VFE_ProductionAlternatives</tag>
                                <isMaster>false</isMaster>
                                <hideFromGUI>true</hideFromGUI>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VFE_TableStonecutterElectric"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <tag>VFE_ProductionAlternatives</tag>
                                <isMaster>false</isMaster>
                                <hideFromGUI>true</hideFromGUI>
                            </li>
                        </modExtensions>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>