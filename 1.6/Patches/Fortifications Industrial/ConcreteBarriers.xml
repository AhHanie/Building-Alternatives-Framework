<?xml version="1.0" encoding="utf-8"?>

<!-- ========================================================================================== -->
<!-- CONCRETE BARRIERS ALTERNATIVES FOR FORTIFICATIONS - INDUSTRIAL -->
<!-- ========================================================================================== -->

<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Fortifications - Industrial</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Add alternatives to the primary concrete barrier -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_TankTrap"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <alternatives>
                                    <li>FT_BarrierDiagonal</li>
                                    <li>FT_Barrier</li>
                                    <li>FT_Tetrapods</li>
                                </alternatives>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="FT_TankTrap"]/designatorDropdown</xpath>
                </li>

                <!-- Hide diagonal barrier from architect menu -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_BarrierDiagonal"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="FT_BarrierDiagonal"]/designatorDropdown</xpath>
                </li>

                <!-- Hide tank trap from architect menu -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_Barrier"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="FT_Barrier"]/designatorDropdown</xpath>
                </li>

                <!-- Hide tetrapods from architect menu -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_Tetrapods"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="FT_Tetrapods"]/designatorDropdown</xpath>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>