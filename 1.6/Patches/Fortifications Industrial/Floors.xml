<?xml version="1.0" encoding="utf-8"?>

<!-- ========================================================================================== -->
<!-- CONCRETE FLOOR ALTERNATIVES FOR FORTIFICATIONS - INDUSTRIAL -->
<!-- ========================================================================================== -->

<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Fortifications - Industrial</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Add alternatives to the primary concrete floor -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/TerrainDef[defName="FT_Concrete"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <alternatives>
                                    <li>FT_ConcreteTile</li>
                                    <li>FT_FineConcreteTile</li>
                                    <li>FT_FlagstoneConcrete</li>
                                    <li>FT_TileStoneConcrete</li>
                                    <li>FT_PlankFloor</li>
                                </alternatives>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <li Class="PatchOperationRemove">
                    <xpath>/Defs/TerrainDef[defName="FT_Concrete"]/designatorDropdown</xpath>
                </li>

                <!-- Hide fine concrete tile from architect menu (Royalty only) -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/TerrainDef[defName="FT_ConcreteTile"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/TerrainDef[defName="FT_ConcreteTile"]/designatorDropdown</xpath>
                </li>

                <!-- Hide fine concrete tile from architect menu (Royalty only) -->
                <li Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Royalty">
                    <xpath>/Defs/TerrainDef[defName="FT_FineConcreteTile"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/TerrainDef[defName="FT_FineConcreteTile"]/designatorDropdown</xpath>
                </li>

                <!-- Hide concrete flagstone from architect menu -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/TerrainDef[defName="FT_FlagstoneConcrete"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>

                <!-- Hide tile stone concrete from architect menu -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/TerrainDef[defName="FT_TileStoneConcrete"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>

                <!-- Hide plank floor from architect menu -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/TerrainDef[defName="FT_PlankFloor"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/TerrainDef[defName="FT_PlankFloor"]/designatorDropdown</xpath>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>