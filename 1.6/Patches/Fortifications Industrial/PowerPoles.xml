<?xml version="1.0" encoding="utf-8"?>

<!-- ========================================================================================== -->
<!-- POWER POLES ALTERNATIVES FOR FORTIFICATIONS - INDUSTRIAL -->
<!-- ========================================================================================== -->

<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Fortifications - Industrial</li>
            <li>Power Poles</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Add alternatives to the primary power pole -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_PowerPole"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <alternatives>
                                    <li>FT_PowerPole_Lamp</li>
                                </alternatives>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <!-- Hide lamp power pole from architect menu -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_PowerPole_Lamp"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>