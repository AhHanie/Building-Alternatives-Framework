<?xml version="1.0" encoding="utf-8"?>

<!-- ========================================================================================== -->
<!-- PRODUCTION TABLES ALTERNATIVES FOR FORTIFICATIONS - INDUSTRIAL -->
<!-- ========================================================================================== -->

<Patch>
    <!-- Check if Building Alternatives Framework is loaded -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Fortifications - Industrial</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Add alternatives to the primary production table (concrete mixer) -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_TableConcreteMixer"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                                <alternatives>
                                    <li>FT_TableLathe</li>
                                    <li>FT_TableChemistry</li>
                                </alternatives>
                            </li>
                        </modExtensions>
                    </value>
                </li>

                <!-- Hide lathe from architect menu -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_TableLathe"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>

                <!-- Hide chemistry table from architect menu -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="FT_TableChemistry"]</xpath>
                    <value>
                        <modExtensions>
                            <li Class="SK_Building_Alternatives_Framework.HideFromGUIModExtension" />
                        </modExtensions>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>