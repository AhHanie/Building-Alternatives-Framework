        <xpath>/Defs/ThingDef[defName="Bedroll"]</xpath>
        <value>
            <designationCategory Inherit="False"></designationCategory>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Stool"]</xpath>
        <value>
            <designationCategory Inherit="False"></designationCategory>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="DiningChair"]</xpath>
