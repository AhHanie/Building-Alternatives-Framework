<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <!-- These patches are used to remove the alternative buildings from the architect menu -->

    <!-- These buildings don't inherit designationCategory so we can remove it directly -->
    <Operation Class="PatchOperationRemove">
        <xpath>/Defs/ThingDef[defName="Fence"]/designationCategory</xpath>
    </Operation>
    <Operation Class="PatchOperationRemove">
        <xpath>/Defs/ThingDef[defName="FueledStove"]/designationCategory</xpath>
    </Operation>

    <!-- These buildings inherit designationCategory so we have to override the inheritance -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Door"]</xpath>
        <value>
            <designationCategory Inherit="False"></designationCategory>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="FenceGate"]</xpath>
        <value>
            <designationCategory Inherit="False"></designationCategory>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="SteleLarge"]</xpath>
        <value>
            <designationCategory Inherit="False"></designationCategory>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Bed"]</xpath>
        <value>
            <designationCategory Inherit="False"></designationCategory>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="SleepingSpot"]</xpath>
        <value>
            <designationCategory Inherit="False"></designationCategory>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="RoyalBed"]</xpath>
        <value>
            <designationCategory Inherit="False"></designationCategory>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="HospitalBed"]</xpath>
        <value>
            <designationCategory Inherit="False"></designationCategory>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Bedroll"]</xpath>
