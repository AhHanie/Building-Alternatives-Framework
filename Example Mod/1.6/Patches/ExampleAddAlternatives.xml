<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <!-- This patch adds building altenatives to wall -->

    <!-- Example patching unrelated things in a single list -->
    <Operation Class="PatchOperationSequence">
        <operations>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="Fence"]</xpath>
                <value>
                    <modExtensions>
                        <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                            <tag>CoolStuff</tag>
                            <isMaster>true</isMaster>
                        </li>
                    </modExtensions>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="FenceGate"]</xpath>
                <value>
                    <modExtensions>
                        <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                            <tag>CoolStuff</tag>
                            <isMaster>false</isMaster>
                            <hideFromGUI>true</hideFromGUI>                            <!-- used to hide building from Architect Menu -->
                        </li>
                    </modExtensions>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="FueledStove"]</xpath>
                <value>
                    <modExtensions>
                        <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                            <tag>CoolStuff</tag>
                            <isMaster>false</isMaster>
                            <hideFromGUI>true</hideFromGUI>
                        </li>
                    </modExtensions>
                </value>
            </li>
            <!-- This will also add any children to bed to the list -->
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="Bed"]</xpath>
                <value>
                    <modExtensions>
                        <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                            <tag>CoolStuff</tag>
                            <isMaster>false</isMaster>
                            <hideFromGUI>true</hideFromGUI>
                        </li>
                    </modExtensions>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="RoyalBed"]</xpath>
                <value>
                    <modExtensions>
                        <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                            <tag>CoolStuff</tag>
                            <isMaster>false</isMaster>
                            <hideFromGUI>true</hideFromGUI>
                        </li>
                    </modExtensions>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="HospitalBed"]</xpath>
                <value>
                    <modExtensions>
                        <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                            <tag>CoolStuff</tag>
                            <isMaster>false</isMaster>
                            <hideFromGUI>true</hideFromGUI>
                        </li>
                    </modExtensions>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="SleepingSpot"]</xpath>
                <value>
                    <modExtensions>
                        <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                            <tag>CoolStuff</tag>
                            <isMaster>false</isMaster>
                            <hideFromGUI>true</hideFromGUI>
                        </li>
                    </modExtensions>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="SteleLarge"]</xpath>
                <value>
                    <modExtensions>
                        <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                            <tag>CoolStuff</tag>
                            <isMaster>false</isMaster>
                            <hideFromGUI>true</hideFromGUI>
                        </li>
                    </modExtensions>
                </value>
            </li>
            <!-- This will also add any children to door to the list -->
