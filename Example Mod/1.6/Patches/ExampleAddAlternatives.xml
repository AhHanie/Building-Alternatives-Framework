        </operations>
    </Operation>

    <!-- Example patching a parent and separating its children into different lists -->
    <Operation Class="PatchOperationSequence">
        <operations>
            <!-- In list: Walls -->
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="Wall"]</xpath>
                <value>
                    <modExtensions>
                        <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                            <tag>Walls</tag>
                            <uiIconPath>UI/List</uiIconPath>                            <!-- Optional UI Icon -->
                            <hoverUiIconPath>UI/ListSelected</hoverUiIconPath>                            <!-- Optional Hover UI Icon -->
                            <isMaster>true</isMaster>
                        </li>
                    </modExtensions>
                </value>
            </li>
            <!-- In list: OdysseyWalls -->
            <li Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Odyssey">
                <xpath>/Defs/ThingDef[defName="GravshipHull"]</xpath>
                <value>
                    <modExtensions>
                        <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                            <tag>OdysseyWalls</tag>
                            <isMaster>true</isMaster>
                        </li>
                    </modExtensions>
                </value>
            </li>
            <!-- In list: UnbuildableOdysseyWalls -->
            <li Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Odyssey">
                <xpath>/Defs/ThingDef[defName="AncientFortifiedWall"]</xpath>
                <value>
                    <modExtensions>
                        <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                            <tag>UnbuildableOdysseyWalls</tag>
                            <isMaster>false</isMaster>
                        </li>
                    </modExtensions>
                </value>
            </li>
            <!-- In list: UnbuildableOdysseyWalls -->
            <li Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Odyssey">
                <xpath>/Defs/ThingDef[defName="OrbitalAncientFortifiedWall"]</xpath>
                <value>
                    <modExtensions>
                        <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                            <tag>UnbuildableOdysseyWalls</tag>
                            <isMaster>false</isMaster>
                        </li>
                    </modExtensions>
                </value>
            </li>
            <!-- In list: UnbuildableAnomalyWalls -->
            <li Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Anomaly">
                <xpath>/Defs/ThingDef[defName="GrayWall"]</xpath>
                <value>
                    <modExtensions>
                        <li Class="SK_Building_Alternatives_Framework.AlternativesModExtension">
                            <tag>UnbuildableAnomalyWalls</tag>
                            <isMaster>true</isMaster>
                        </li>
                    </modExtensions>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>